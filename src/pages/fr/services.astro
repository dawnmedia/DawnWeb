---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import webdev from "@images/web-dev.jpg";
import webdesign from "@images/web-design.jpg";
import webuild from "@images/webuild.jpg";
import payments from "@images/payments.jpg";
import software from "@images/software.jpg";
import code from "@images/code.jpg";
import business from "@images/business.jpg";
import graph from "@images/graph.jpg";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Conseils professionnels de confiance",
    subTitle:
      "Créer un site web ou un produit logiciel peut sembler complexe. Avec nos services de conseil, nous vous guidons à chaque étape : choix technologiques, définition du périmètre, expérience utilisateur et conformité. Profitez d’un accompagnement sur mesure pour réussir votre projet.",
    single: false,
    imgOne: webdesign,
    imgOneAlt: "Personne concevant un site web sur un ordinateur portable",
    imgTwo: webdev,
    imgTwoAlt: "Personne codant un site web",
    },
    {
    isRightSection: false,
    title: "Transformer vos idées en solutions concrètes",
    subTitle:
      "Chez Dawn Web, nos développeurs allient créativité et expertise pour donner vie à vos projets numériques. Que ce soit pour une page d’accueil ou une application sur mesure, nous réalisons des solutions rapides, fiables et évolutives, pensées pour vos objectifs.",
    img: webuild,
    imgAlt: "Écran affichant du code de développement",
    btnExists: true,
    btnTitle: "En savoir plus",
    btnURL: "#",
    },
    {
    isRightSection: true,
    title: "Piloter vos projets avec rigueur et transparence",
    subTitle:
      "Une gestion de projet efficace est la clé du succès. Nous assurons la planification, le suivi des étapes et la communication, pour que votre projet avance sereinement et dans les délais. De la première réunion au lancement, nous gérons la complexité pour vous.",
    single: false,
    imgOne: payments,
    imgOneAlt: "Personne effectuant un paiement dans un magasin",
    imgTwo: software,
    imgTwoAlt: "Réceptionniste d’hôtel utilisant un téléphone fixe",
    },
    {
    isRightSection: false,
    title: "Garantir la performance sur le long terme",
    subTitle:
      "Notre engagement ne s’arrête pas à la livraison. Dawn Web assure la maintenance et le support pour garantir la fiabilité et la pérennité de vos solutions. Contrôles réguliers, assistance rapide : comptez sur nous pour un accompagnement durable.",
    img: code,
    imgAlt:
      "Homme en gilet orange et noir portant un casque blanc tenant un outil électrique jaune et noir",
    },
    {
    isRightSection: true,
    title: "Des stratégies sur mesure pour chaque défi",
    subTitle:
      "Pour les entreprises aux besoins spécifiques, Dawn Web conçoit des solutions personnalisées. Nous analysons vos enjeux pour élaborer des stratégies qui optimisent vos opérations, renforcent votre efficacité et soutiennent votre croissance.",
    single: false,
    imgOne: business,
    imgOneAlt: "Structure de bâtiment en cours de construction",
    imgTwo: graph,
    imgTwoAlt: "Bâtiment marron et gris en construction",
    btnExists: true,
    btnTitle: "Lire la suite",
    btnURL: "#",
  },
];
---

<MainLayout
  title="Services | ScrewFast"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://dawnwebs.com/fr/services",
    url: "https://dawnwebs.com/fr/services",
    name: "Services de Consultation d'Experts | Dawn Web",
    description:
      "",
    isPartOf: {
      "@type": "WebSite",
      url: "https://dawnwebs.com/fr",
      name: "Dawn Web",
      description:
        "",
    },
    inLanguage: "fr",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Unir l'expertise à votre vision"
    subTitle="Chez ScrewFast, nous sommes fiers de fournir des solutions complètes et un service exceptionnel dans l'industrie du matériel et de la construction. Notre équipe expérimentée est dédiée à soutenir votre projet de sa conception à son achèvement avec une gamme de services spécialisés."
    btnExists={true}
    btnTitle="Planifier une consultation"
    btnURL={getRelativeLocaleUrl("fr", "/contact")}
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Par les chiffres"
    subTitle="Notre engagement envers la qualité et la fiabilité est évident dans chaque projet que nous entreprenons. Chez ScrewFast, nous nous engageons à fournir des services de premier plan dans l'industrie qui garantissent que vos projets de construction sont conçus pour durer."
    mainStatTitle="96%"
    mainStatSubTitle="de nos clients évaluent leur expérience avec ScrewFast comme exceptionnelle"
    stats={[
      {
        stat: "99,8%",
        description: "taux de réalisation de projets",
      },
      {
        stat: "5 000+",
        description: "installations réussies",
      },
      {
        stat: "85%",
        description: "croissance client année après année",
      },
    ]}
  />
</MainLayout>
