---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";
import webdev from "@images/web-dev.jpg";
import webdesign from "@images/web-design.jpg";
import webuild from "@images/webuild.jpg";
import payments from "@images/payments.jpg";
import software from "@images/software.jpg";
import code from "@images/code.jpg";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Professional Guidance You Can Trust",
    subTitle:
      "Building a website or software product can feel overwhelming. With our expert consulting services, we help you make smart decisions every step of the way—from choosing the best technology stack to defining your project's scope, usability, and compliance standards.",
        single: false,
        imgOne: webdesign,
        imgOneAlt: "Blueprints and digital tablet with web development plans.",
        imgTwo: webdev,
        imgTwoAlt: "Person working in the office",
        },
        {
        isRightSection: false,
        title: "Transforming Ideas into Functional Products",
        subTitle:
      "At Dawn Web, our developers combine precision, creativity, and technical skill to bring your digital concepts to life. Whether you're launching a landing page or developing a custom application, we turn your ideas into fast, scalable, and secure software solutions—designed to deliver results.",
    img: webuild,
    imgAlt: "Website before and after",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
    },
    {
    isRightSection: true,
    title: "Guiding Projects with Precision and Clarity",
    subTitle:
      "Strong project management is key to successful digital delivery. At Dawn Web, we take charge of planning, milestones, and communication—ensuring your project stays on track and within scope. From initial consultation to final deployment, our team handles the complexity so you can focus on your business goals.",
    single: false,
    imgOne: payments,
    imgOneAlt: "",
    imgTwo: software,
    imgTwoAlt: "Aerial view of managed construction",
  },
  {
    isRightSection: false,
    title: "Ensuring Long-lasting Performance",
    subTitle:
      "Our commitment to your project doesn't end at completion. Dawn Web offers ongoing maintenance and support services to ensure your construction's longevity and performance. From regular check-ups to emergency assistance, our responsive team is there to provide seamless support.",
    img: code,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Crafting Bespoke Strategies for Unique Challenges",
    subTitle:
      "For our larger enterprise clients, Dawn Web offers custom solutions designed to meet specific industry challenges. By understanding your unique needs, we engineer tailored strategies aimed at optimizing your operations, enhancing efficiency, and driving your business forward.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "In progress building structure",
    imgTwo: underConstruction,
    imgTwoAlt: "Brown and gray building under construction",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://dawnweb.co/services",
    url: "https://dawnweb.co/services",
    name: "Expert Consultation Services | Dawn Web",
    description:
      "Uniting expertise with your vision, Dawn Web provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://dawnweb.co",
      name: "Dawn Web",
      description:
        "Dawn Web offers top-tier Web Development and expert construction services to meet all your project needs.",
    },
    inLanguage: "en-US",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Uniting Expertise with Your Digital Vision"
    subTitle="At Dawn Web, we provide comprehensive web and software development solutions designed to bring your digital ideas to life. Our experienced team guides every project from discovery to deployment, ensuring your vision is executed with clarity and care."
    btnExists={true}
    btnTitle="Schedule a Free Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At Dawn Web, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="98%"
    mainStatSubTitle="of our clients rate their experience with Dawn Web as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "1,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>