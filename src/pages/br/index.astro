---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero.png";
import faqs from "@data/br/faqs.json";
import features from "@data/br/features.json";
import pricing from "@data/br/pricing.json";
import featuresjpg from "@images/features.jpg";
import webdev from "@images/web-dev.png";
import payments from "@images/payments.jpg";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Siga nosso Instagram"
    url="https://www.instagram.com/dawnweb_en"
  />

  <HeroSection
    title={`Eleve sua presença online com <span class="text-blue-600 dark:text-blue-300">Dawn Web</span>`}
    subTitle="Criação de sites personalizados e soluções digitais para impulsionar o crescimento do seu negócio."
    primaryBtn="Agendar uma consulta gratuita"
    primaryBtnURL="https://calendly.com/contact-dawnwebs/30min"
    secondaryBtn="Veja Nossos Projetos"
    secondaryBtnURL="/br/products"
    withReview={false}
    avatars={avatarSrcs}
    rating={`<span class="font-bold">4.8</span> / 5`}
    starCount={4}
    reviews={`Baseado em mais de <span class="font-bold">12,8k</span> avaliações`}
    src={heroImage}
    alt="Imagem principal mostrando uma equipe trabalhando junta em um projeto"
  />

  <FeaturesGeneral
    title="Expanda seu negócio online"
    subTitle="Colabore com a Dawn Web para criar sites incríveis, SEO e estratégias de marketing que geram resultados."
    alt="Imagem das funcionalidades da Dawn Web"
    features={features}
  />

  <FeaturesNavs
    title={`Soluções <span class="text-blue-500 dark:text-blue-400">Dawn Web</span> sob medida para atender perfeitamente às necessidades do seu negócio.`}
    tabs={[
      {
        heading: "Desenvolvimento Web",
        content:
          "Criamos sites responsivos adaptados às necessidades da sua empresa.",
        svg: "tools",
        src: webdev,
        alt: "Máquinas de construção amarelas e pretas em um terreno gramado marrom",
        first: true,
      },
      {
        heading: "Softwares & Aplicativos Personalizados",
        content:
          "De PMS hoteleiros a totens de restaurante, desenvolvemos soluções de software que resolvem desafios reais do seu negócio.",
        svg: "dashboard",
        src: payments,
        alt: "Captura de tela ou representação gráfica de um painel intuitivo",
        second: true,
      },
      {
        heading: "Funcionalidades robustas",
        content:
          "Vamos além dos sites. A Dawn Web integra sua presença online com ferramentas e plataformas essenciais para otimizar seu negócio.",
        svg: "house",
        src: featuresjpg,
        alt: "Estrutura metálica cinza próxima a um guindaste em um canteiro de obras durante o dia",
      },
    ]}
  />

  <TestimonialsSection
    title="Lance seu negócio online"
    subTitle="Na Dawn Web, garantimos um início tranquilo com integração e configuração completas. Descubra como é simples construir sua presença online com nosso suporte especializado."
    testimonials={[
      {
        content:
          "A Dawn Web melhorou significativamente nossa presença online. A equipe foi extremamente prestativa e ágil, e os resultados são fenomenais. Uma verdadeira transformação para nossa empresa!",
        author: "Sabrina D.",
        role: "Diretora de Operações | Labmid Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "221+",
        description: "Clientes satisfeitos com os serviços da Dawn Web",
      },
      {
        count: "200%",
        description:
          "Redução de custos em relação à contratação de serviços individuais.",
      },
      {
        count: "75%",
        description: "Fluxo de trabalho mais eficiente",
      },
      {
        count: "2x",
        description: "Tempo de lançamento duas vezes mais rápido",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Perguntas<br />frequentes" faqs={faqs} />

  <HeroSectionAlt
    title="Comece hoje mesmo"
    subTitle="Nossa equipe está pronta para ajudar você a alcançar seus objetivos com uma presença online poderosa."
    url="/br/contact"
  />
</MainLayout>
