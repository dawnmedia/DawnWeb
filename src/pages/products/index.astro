---
// Importing necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import CardSmall from "@components/ui/cards/CardSmall.astro";
import CardWide from "@components/ui/cards/CardWide.astro";
import FeaturesStatsAlt from "@components/sections/features/FeaturesStatsAlt.astro";
import TestimonialsSectionAlt from "@components/sections/testimonials/TestimonialsSectionAlt.astro";

// Importing necessary functions from Astro
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { SITE } from "@data/constants";

// Fetching all the product related content and sorting it by main.id
const product: CollectionEntry<"products">[] = (
  await getCollection("products", (entry: CollectionEntry<"products">) => {
    return entry.id.startsWith("en/");
  })
).sort(
  (a: CollectionEntry<"products">, b: CollectionEntry<"products">) =>
    a.data.main.id - b.data.main.id
);
  
// Define variables for page content
const title: string = "Products";
const subTitle: string =
  "Explore the artistry and impact of Dawn Web's website designs, crafted for businesses of all sizes. Each website is meticulously built with a focus on user experience, aesthetics, and achieving your business goals.";

// Testimonial data that will be rendered in the component
const testimonials = [
  // First testimonial data
  {
    content:
      ' "We were struggling to manage our social media presence effectively. Dawn Web stepped in and created a comprehensive strategy that has dramatically increased our engagement and reach.  They consistently deliver high-quality content that captures our brand perfectly. We highly recommend their services!" ',
    author: "Johnathan Miller",
    role: "Marketing Director | Green Bean Coffee Roasters",
    avatarSrc:
      "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
    avatarAlt: "Image Description",
  },
  // Second testimonial data
  {
    content:
      ' "Dawn Web took our outdated website and transformed it into a modern, user-friendly platform.  We\'ve seen a significant increase in online inquiries and sales since the launch. Their team was a pleasure to work with – professional, responsive, and truly dedicated to our success." ',
    author: "Aisha Khan",
    role: "Owner | Bloom & Wild Florists",
    avatarSrc:
      "https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=1376&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
    avatarAlt: "Image Description",
  },
  // Third testimonial data
  {
    content:
      ' "As a new business, we needed a website that would make a strong first impression. Dawn Web exceeded our expectations! They designed a beautiful, functional website that perfectly captures our brand identity. We\'re so grateful for their expertise and guidance" ',
    author: "Richard Kim",
    role: "Founder | The Cozy Corner Bookstore",
    avatarSrc:
      "https://images.unsplash.com/photo-1474176857210-7287d38d27c6?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
    avatarAlt: "Image Description",
  },
];

const pageTitle: string = `Products | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://dawnwebs.com/products",
    url: "https://dawnwebs.com/products",
    name: "Dawn Web",
    description:
      "Explore the artistry and impact of Dawn Web's website designs, crafted for businesses of all sizes. Each website is meticulously built with a focus on user experience, aesthetics, and achieving your business goals.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://dawnwebs.com",
      name: "Dawn Web",
      description:
        "Dawn Web offers top-notch web design and development services to help businesses establish a strong online presence.",
    },
    inLanguage: "en-US",
  }}
>
  <div
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div class="mb-4 flex items-center justify-between gap-8 sm:mb-8 md:mb-12">
      <div class="flex items-center gap-12">
        <h1
          class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
        >
          {title}
        </h1>
        {
          subTitle && (
            <p class="hidden max-w-screen-sm text-pretty text-neutral-600 dark:text-neutral-400 md:block">
              {subTitle}
            </p>
          )
        }
      </div>
      <PrimaryCTA title="Contact Us" url="/contact" noArrow={false} />
    </div>
    <!--Displaying products in alternating styles. Alternative product gets different card styling.-->
    <!--Maps through all product entries and displays them with either CardSmall or CardWide based on their position.-->
    <section class="grid grid-cols-1 gap-4 sm:grid-cols-3 md:gap-6 xl:gap-8">
      {
        product.map((product, index) => {
          const position = index % 4;
          if (position === 0 || position === 3) {
            return <CardSmall product={product} />;
          } else {
            return <CardWide product={product} />;
          }
        })
      }
    </section>
  </div>
  <!--Features statistics section-->
  <FeaturesStatsAlt
    title="Why Choose Dawn Web?"
    subTitle="Transform your ideas into a powerful online presence with Dawn Web. Whether you're a startup launching your first website or an established business looking to upgrade your digital foundation, we deliver expert solutions tailored to your goals."
    benefits={[
      "High-Performance Websites: We design and develop custom websites that are fast, reliable, and optimized to convert visitors into loyal customers.",
      "Scalable Development Solutions: Our approach covers everything from simple landing pages to fully integrated platforms—built with modern frameworks, optimized for growth, and easy to maintain.",
      " Reliable Ongoing Support: From launch to long-term success, we provide continuous maintenance, security updates, and expert assistance to ensure your website performs flawlessly every day.",
    ]}
  />
  <!--Testimonials section
  <TestimonialsSectionAlt
    title="What Our Customers Say"
    testimonials={testimonials}
  />-->
</MainLayout>
