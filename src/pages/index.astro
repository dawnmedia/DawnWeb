---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featuresjpg from "@images/features.jpg";
import webdev from "@images/web-dev.jpg";
import payments from "@images/payments.jpg";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Follow Our Instagram"
    url="https://www.instagram.com/dawnweb_en"
  />

  <HeroSection
    title=`Elevate Your Online Presence with <span
        class="text-yellow-500 dark:text-yellow-100">Dawn Web</span>`
    subTitle="Crafting Custom Websites & Digital Solutions for Business Growth."
    primaryBtn="Check Our Projects"
    primaryBtnURL="/products"
    secondaryBtn="Contact Sales Team"
    secondaryBtnURL="/contact"
    withReview={false}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Hero Image showing a team working together on a project"
  />

  <FeaturesGeneral
    title="Grow Your Business Online"
    subTitle="Partner with Dawn Web for stunning websites, SEO, & marketing strategies that deliver results."
    alt="Dawn Web features image"
    features={features}
  />

  <FeaturesNavs
    title=`Custom <span class="text-yellow-500 dark:text-yellow-400">Dawn Web</span>'s offerings to perfectly suit your business needs.`
    tabs={[
      {
        heading: "Web Development",
        content:
          "We create responsive websites tailored to your business needs.",
        svg: "tools",
        src: webdev,
        alt: "Yellow and black heavy equipment on brown grass field",
        first: true,
      },
      {
        heading: "Custom Software & Apps",
        content:
          "From hotel PMS systems to restaurant kiosks, we build software solutions that solve real business challenges.",
        svg: "dashboard",
        src: payments,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "Robust Features",
        content:
          "We go beyond just websites. Dawn Web integrates your online presence with essential tools and platforms to streamline your business.",
        svg: "house",
        src: featuresjpg,
        alt: "Gray metal building frame near tower crane during daytime",
      },
    ]}
  />

  <TestimonialsSection
    title="Launch Your Business Online"
    subTitle="At Dawn Web, we ensure a smooth start with comprehensive onboarding and setup. Experience the ease of building your online presence with our expert guidance."
    ;
    testimonials={[
      {
        content:
          "Dawn Web dramatically improved our online presence. Their team was incredibly helpful and responsive, and the results have been phenomenal. Truly a game-changer for our business!",
        author: "Sabrina D.",
        role: "Chief Operating Officer | Labmid Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "221+",
        description: "Clients satisfied with Dawn Web's services",
      },
      {
        count: "200%",
        description:
          "Reduction in costs compared to purchasing individual services.",
      },
      {
        count: "75%",
        description: "More Efficient Workflow",
      },
      {
        count: "2x",
        description: "Faster Time-to-Market",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Get Started Today"
    subTitle="Our team is dedicated to helping you achieve your business goals through a powerful online presence."
    url="/contact"
  />
</MainLayout>
