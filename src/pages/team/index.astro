    name: string;
    role: string;
    bio: string;
    avatar: string;
    skills: string[];
};
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";
import Avatar from "@components/ui/avatars/Avatar.astro";
