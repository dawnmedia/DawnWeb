---
const title = "Meet Our Team";
const description = "Meet the talented individuals behind Dawn Web, dedicated to crafting exceptional digital experiences.";

const team = [
  {
    name: "Andrew Henrice",
    title: "CEO & Full Stack Web Dev",
    bio: "Leads Dawn Web in crafting digital experiences that drive business growth.",
    twitter: "https://twitter.com/AndrewHenrice",
    instagram: "https://instagram.com/brenoandrew",
    github: "https://www.github.com/brenoandrew",
    portfolio: "https://www.andrewhenrice.com",
    image: "/team/Andrew.png",
  },
  {
    name: "Daniel Moraes",
    title: "CTO & Back End Developer",
    bio: "Architects robust and scalable back-end systems for seamless online experiences.",
    twitter: "https://twitter.com/",
    instagram: "https://www.instagram.com/daniel.h.moraes/",
    github: "https://www.github.com/",
    portfolio: "https://www.instagram.com/daniel.h.moraes/",
    image: "/team/DanielMoraes.png",
  },
  {
    name: "Mada",
    title: "Artist & UX Designer",
    bio: "Blends artistry and user-centric design to create captivating and intuitive interfaces.",
    twitter: "https://twitter.com/",
    instagram: "https://www.instagram.com/madalena_bf/",
    github: "https://www.github.com/",
    portfolio: "https://www.instagram.com/madalena_bf/",
    image: "/team/mada.png",
  },
];
---

<section class="bg-stone-100 dark:bg-slate-800">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
      <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">
        {title}
      </h2>
      <p class="font-light text-gray-500 lg:mb-16 sm:text-xl dark:text-gray-400">
        {description}
      </p>
    </div>

    <div class="grid gap-8 mb-6 lg:mb-16 md:grid-cols-2">
      {
        team.map((member) => (
          <div class="flex flex-col md:flex-row items-center bg-gray-50 rounded-lg shadow overflow-hidden dark:bg-black dark:border-gray-700">
            <img
              class="w-full h-64 md:w-48 md:h-full object-cover"
              src={member.image}
              alt={`Photo of ${member.name}`}
            />

            <div class="p-5 flex flex-col justify-between">
              <div>
                <h3 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
                  <a href={member.portfolio}>{member.name}</a>
                </h3>
                <span class="text-gray-500 dark:text-gray-400 block mb-2">
                  {member.title}
                </span>
                <p class="mb-4 font-light text-gray-500 dark:text-gray-400">
                  {member.bio}
                </p>
              </div>
              <ul class="flex space-x-4 mt-auto">
                <li>
                  <a
                    href={member.twitter}
                    rel="noopener noreferrer"
                    target="_blank"
                    class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
                  > 
                  
                    <!-- Twitter SVG -->
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                    </svg>
                  </a>
                </li>
                <li>
                  <a
                    href={member.instagram}
                    rel="noopener noreferrer"
                    target="_blank"
                    class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
                  >
                    <!-- Instagram SVG -->
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 448 512"
                      aria-hidden="true"
                    >
                      <path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z" />
                    </svg>
                  </a>
                </li>
                <li>
                  <a
                    href={member.github}
                    rel="noopener noreferrer"
                    target="_blank"
                    class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
                  >
                    <!-- GitHub SVG -->
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
                    </svg>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
